{
  "name": "cryptoscore-web2",
  "version": "0.2.0",
  "description": "CryptoScore Web2 Application - Prediction markets with Supabase backend",
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "dev": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "build:check": "cd app && npm run build:check",
    "preview": "cd app && npm run preview",
    "test": "cd app && npm run test",
    "test:watch": "cd app && npm run test:watch",
    "deploy:development": "npm run build && npm run deploy:env -- development",
    "deploy:staging": "npm run build && npm run deploy:env -- staging",
    "deploy:production": "npm run build && npm run deploy:env -- production",
    "deploy:env": "node scripts/deploy-web2.js",
    "setup:supabase": "node scripts/setup-supabase.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "configure:development": "cp .env.development .env && cd app && cp ../.env.development .env",
    "configure:staging": "cp .env.staging .env && cd app && cp ../.env.staging .env",
    "configure:production": "cp .env.production .env && cd app && cp ../.env.production .env",
    "configure:list": "node scripts/list-environments.js",
    "configure:current": "node scripts/current-environment.js"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "dotenv": "^16.4.5",
    "prettier": "^2.6.2",
    "typescript": "^4.3.5"
  }
}
